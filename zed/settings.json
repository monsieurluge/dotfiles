{
    "active_pane_modifiers": {
      "border_size": 4.0
    },
    "file_finder": {
        "file_icons": false,
        "git_status": false
    },
    "language_models": {
        "openai": {
        }
    },
    "theme": {
        "mode": "system",
        "light": "NeoSolarized Light",
        "dark": "NeoSolarized Dark"
    },
    "base_keymap": "SublimeText",
    "features": {
        "edit_prediction_provider": "copilot"
    },
    "buffer_font_family": "Hack",
    "buffer_font_features": {
        // Disable ligatures:
        "calt": false
    },
    "buffer_font_size": 18.0,
    "buffer_font_weight": 400,
    "buffer_line_height": "standard",
    "lsp_document_colors": "none",
    "inline_code_actions": false,
    "ui_font_family": ".SystemUIFont",
    "ui_font_features": {
        // Disable ligatures:
        "calt": false
    },
    "ui_font_weight": 400,
    "ui_font_size": 14,
    "unnecessary_code_fade": 0.7,
    "centered_layout": {
        "left_padding": 0.25,
        "right_padding": 0.25
    },
    "multi_cursor_modifier": "alt",
    "vim_mode": false,
    "hover_popover_enabled": true,
    "confirm_quit": false,
    "restore_on_startup": "last_workspace",
    "drop_target_size": 0.2,
    "when_closing_with_no_tabs": "platform_default",
    "cursor_blink": true,
    "cursor_shape": "block",
    "current_line_highlight": "all",
    "show_completions_on_input": false,
    "show_completion_documentation": true,
    "show_wrap_guides": false,
    "wrap_guides": [],
    // Hide the values of in variables from visual display in private files
    "redact_private_values": false,
    "expand_excerpt_lines": 3,
    "private_files": [
        "**/.env*",
        "**/*.pem",
        "**/*.key",
        "**/*.cert",
        "**/*.crt",
        "**/secrets.yml"
    ],
    "use_on_type_format": true,
    "use_autoclose": false,
    "always_treat_brackets_as_autoclosed": false,
    "show_edit_predictions": false,
    "show_whitespaces": "selection",
    "calls": {
        "mute_on_join": false,
        "share_on_join": false
    },
    "toolbar": {
        "breadcrumbs": false,
        "quick_actions": false
    },
    "scrollbar": {
        "show": "never",
        "cursors": true,
        "git_diff": false,
        "search_results": true,
        "selected_symbol": true,
        "diagnostics": "error"
    },
    "double_click_in_multibuffer": "select",
    "gutter": {
        "line_numbers": false,
        "folds": false,
        "runnables": false
    },
    "indent_guides": {
        "enabled": false,
        "line_width": 3,
        "coloring": "fixed",
        "background_coloring": "disabled"
    },
    "vertical_scroll_margin": 5,
    "scroll_sensitivity": 1.0,
    "relative_line_numbers": false,
    "seed_search_query_from_cursor": "always",
    "inlay_hints": {
        "enabled": false,
        "show_type_hints": true,
        "show_parameter_hints": true,
        "show_other_hints": true,
        "edit_debounce_ms": 700,
        "scroll_debounce_ms": 50
    },
    "search": {
      "button": false
    },
    "git_panel": {
      "button": false
    },
    "outline_panel": {
      "button": false
    },
    "project_panel": {
        "auto_fold_dirs": false,
        "auto_reveal_entries": false,
        "button": false,
        "file_icons": false,
        "folder_icons": false,
        "hide_root": true,
        "indent_size": 12,
        "indent_guides": {
            "show": "never"
        },
        "scrollbar": {
            "show": null
        },
        "show_diagnostics": "errors",
        "sticky_scroll": false
    },
    "chat_panel": {
      "dock": "left"
    },
    "message_editor": {
        "auto_replace_emoji_shortcode": true
    },
    "notification_panel": {
        "button": false
    },
    "agent": {
        "default_model": {
            "provider": "copilot_chat",
            "model": "gpt-4.1"
        },
        "enabled": true,
        "button": true,
        "dock": "right"
    },
    "show_call_status_icon": true,
    "enable_language_server": true,
    "language_servers": [
        "..."
    ],
    "autosave": "on_focus_change",
    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": false,
        "show_tab_bar_buttons": false
    },
    "tabs": {
        "git_status": false,
        "close_position": "right"
    },
    "preview_tabs": {
        "enabled": true,
        "enable_preview_from_file_finder": false,
        "enable_preview_from_code_navigation": false
    },
    "remove_trailing_whitespace_on_save": true,
    "extend_comment_on_newline": true,
    "ensure_final_newline_on_save": true,
    "format_on_save": "off",
    "formatter": "auto",
    "soft_wrap": "prefer_line",
    "preferred_line_length": 80,
    "hard_tabs": false,
    "tab_size": 4,
    "telemetry": {
        "diagnostics": true,
        "metrics": true
    },
    "auto_update": true,
    "diagnostics": {
        "include_warnings": true
    },
    "file_scan_exclusions": [
        "**/.git",
        "**/.svn",
        "**/.hg",
        "**/CVS",
        "**/.DS_Store",
        "**/Thumbs.db",
        "**/.classpath",
        "**/.settings",
        "**/node_modules",
        "**/dist"
    ],
    "git": {
        "git_gutter": "hide",
        "inline_blame": {
            "enabled": false
        }
    },
    "edit_predictions": {
        "disabled_globs": [
            ".env"
        ]
    },
    "journal": {
        "path": "~",
        "hour_format": "hour24"
    },
    "terminal": {
        "shell": "system",
        "dock": "bottom",
        "default_width": 640,
        "default_height": 320,
        "working_directory": "current_project_directory",
        "blinking": "terminal_controlled",
        "alternate_scroll": "off",
        "option_as_meta": false,
        "copy_on_select": false,
        "button": false,
        "env": {},
        "line_height": "standard",
        "detect_venv": {
            "on": {
                "directories": [
                    ".env",
                    "env",
                    ".venv",
                    "venv"
                ],
                "activate_script": "default"
            }
        },
        "font_size": 18
    },
    "code_actions_on_format": {},
    "file_types": {
        "Ruby": [
            "jb"
        ]
    },
    "auto_install_extensions": {
        "html": true
    },
    "languages": {
        "C": {
            "format_on_save": "off"
        },
        "C++": {
            "format_on_save": "off"
        },
        "CSS": {
            "prettier": {
                "allowed": true
            }
        },
        "Go": {
            "code_actions_on_format": {
                "source.organizeImports": true
            }
        },
        "HTML": {
            "prettier": {
                "allowed": true
            }
        },
        "JavaScript": {
            "show_edit_predictions": false,
            "prettier": {
                "allowed": true
            }
        },
        "JSON": {
            "prettier": {
                "allowed": true
            }
        },
        "Markdown": {
            "show_edit_predictions": false,
            "format_on_save": "off",
            "prettier": {
                "allowed": true
            }
        },
        "Ruby": {
            "language_servers": [
                "ruby-lsp",
                "rubocop",
                "!solargraph",
                "!steep",
                "!sorbet",
                "..."
            ],
            "tab_size": 2
        },
        "SCSS": {
            "prettier": {
                "allowed": true
            }
        },
        "SQL": {
            "prettier": {
                "allowed": true,
                "plugins": [
                    "prettier-plugin-sql"
                ]
            }
        },
        "TSX": {
            "prettier": {
                "allowed": true
            }
        },
        "TypeScript": {
            "prettier": {
                "allowed": true
            }
        },
        "Vue.js": {
            "prettier": {
                "allowed": true
            }
        },
        "YAML": {
            "prettier": {
                "allowed": true
            }
        }
    },
    "prettier": {},
    "lsp": {
        "ruby-lsp": {
            "initialization_options": {
                "enabledFeatures": {
                    "diagnostics": false
                }
            },
            "settings": {
                "use_bundler": false
            }
        },
        "rubocop": {
            "initialization_options": {
                "safeAutocorrect": false
            },
            "settings": {
                "use_bundler": false
            }
        }
    },
    "vim": {
        "use_system_clipboard": "always",
        "use_smartcase_find": false
    },
    "preview": {},
    "nightly": {},
    "stable": {},
    "dev": {},
    "line_indicator_format": "long",
    "proxy": null
}
